# .shell_aliases
export DEBUG_INIT_SCRIPTS="${DEBUG_INIT_SCRIPTS:-} .shell_aliases"

case `uname -s` in
Darwin)
	alias ls='ls -G'
	alias tree='tree -C --charset=ascii'
	;;
*)
	alias ls='ls --color=auto'
	;;
esac

alias cfgit='git --git-dir="$HOME/.cfgit" --work-tree="$HOME"'
alias hl='hledger -f $HOME/Documents/Ledger/hledger.ldg'

alias grep='grep --color=auto --exclude=tags'
alias ack='ack --color-match=bold\ red'

alias gbranch='git branch --color'
alias gdiff='git diff --color'
alias glog='git log --color --decorate --show-signature -p'
alias glogstat='git log --color --decorate --show-signature --stat'
alias ggraph='git log --color --graph --oneline --decorate'
alias gtree=ggraph
alias gstatus='git status'
alias gmergeff='git merge --ff-only'
alias gmerge='git merge --no-ff --log'
alias wdiff="$(printf "wdiff -w '\033[30;41m' -x '\033[0m' -y '\033[30;42m' -z '\033[0m'")"
